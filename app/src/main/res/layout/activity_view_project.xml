<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Teknisi.ViewProjectActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">

    <TextView
        android:id="@+id/textView2"
        style="@style/textJudul"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"
        android:text="@string/report_project"/>

        <LinearLayout
            style="@style/linearExpandText"
            android:layout_height="20dp">

            <TextView
                style="@style/viewParent.TextView"
                android:text="Project" />

            <TextView
                style="@style/viewParent.TitikDua"
                android:text=":" />

            <TextView
                android:id="@+id/namaProject"
                style="@style/viewParent.EditText"
                android:focusable="false"
                android:hint="Project"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            style="@style/linearExpandText"
            android:layout_height="20dp">

            <TextView
                style="@style/viewParent.TextView"
                android:text="Lokasi" />

            <TextView
                style="@style/viewParent.TitikDua"
                android:text=":" />

            <TextView
                android:id="@+id/lokasi"
                style="@style/viewParent.EditText"
                android:focusable="false"
                android:hint="Lokasi"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            style="@style/linearExpandText"
            android:layout_height="20dp">

            <TextView
                style="@style/viewParent.TextView"
                android:text="Teknisi 1" />

            <TextView
                style="@style/viewParent.TitikDua"
                android:text=":" />

            <TextView
                android:id="@+id/teknisi1"
                style="@style/viewParent.EditText"
                android:focusable="false"
                android:hint="Teknisi 1"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            style="@style/linearExpandText"
            android:layout_height="20dp">

            <TextView
                style="@style/viewParent.TextView"
                android:text="Teknisi 2" />

            <TextView
                style="@style/viewParent.TitikDua"
                android:text=":" />

            <TextView
                android:id="@+id/teknisi2"
                style="@style/viewParent.EditText"
                android:focusable="false"
                android:hint="Teknisi 2"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            style="@style/linearExpandText"
            android:layout_height="20dp">

            <TextView
                style="@style/viewParent.TextView"
                android:text="Teknisi 3" />

            <TextView
                style="@style/viewParent.TitikDua"
                android:text=":" />

            <TextView
                android:id="@+id/teknisi3"
                style="@style/viewParent.EditText"
                android:focusable="false"
                android:hint="Teknisi 3"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            style="@style/linearExpandText"
            android:layout_height="20dp">

            <TextView
                style="@style/viewParent.TextView"
                android:text="Tanggal Project" />

            <TextView
                style="@style/viewParent.TitikDua"
                android:text=":" />

            <TextView
                android:id="@+id/tanggalPengerjaan"
                style="@style/viewParent.EditText"
                android:focusable="false"
                android:hint="Tanggal Pegerjaan Project"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            style="@style/linearExpandText"
            android:layout_height="20dp">

            <TextView
                style="@style/viewParent.TextView"
                android:text="Catatan" />

            <TextView
                style="@style/viewParent.TitikDua"
                android:text=":" />

            <TextView
                android:id="@+id/catatan"
                style="@style/viewParent.EditText"
                android:focusable="false"
                android:hint="Catatan"
                android:inputType="text" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageProject1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_photo_camera"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/imageProject2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_photo_camera"
                android:padding="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageProject3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_photo_camera"
                android:padding="5dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/warnaBiru"
            android:textColor="@color/warnaPutih"
            android:layout_marginRight="10dp"
            android:text="Back" />
        <Button
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/warnaBiru"
            android:textColor="@color/warnaPutih"
            android:layout_marginRight="10dp"
            android:text="Next" />
    </LinearLayout>
</LinearLayout>

</ScrollView>
