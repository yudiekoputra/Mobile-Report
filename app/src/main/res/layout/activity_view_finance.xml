        <TextView
            android:id="@+id/Deskripsi2"
            style="@style/viewParent.EditText"
            android:focusable="false"
            android:hint="Deskripsi"
            android:inputType="text" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
