        <ImageView
            android:id="@+id/imageBiaya2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_photo_camera"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout
        style="@style/linearExpandText"
        android:layout_height="20dp">

        <TextView
            style="@style/viewParent.TextView"
            android:text="Keperluan 3" />

        <TextView
            style="@style/viewParent.TitikDua"
            android:text=":" />

